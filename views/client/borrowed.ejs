<%- include('../partials/client/header') %>
        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-md-4 col-sm-12 mb-2 mb-md-0">
                        <h4 class="mb-0">Barang Yang Dipinjam</h4>
                        </div>
                    </div>
                </div>
                <div class="table-responsive text-nowrap">
                <% if (borrowedItems.length > 0) { %>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Nama Barang</th>
                                <th>Tanggal Peminjaman</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                        <% borrowedItems.forEach((item, index) => { %>
                            <tr>
                                <td><%= index+1 %></td>
                                <td><%= item.nama_barang %></td>
                                <td><%= item.tgl_pinjam %></td>
                                <td>
                                    <form action="/items/return" method="POST" class="d-inline">
                                        <input type="hidden" name="historyId" value="<%= item.id %>">
                                        <button type="submit" class="btn btn-success">
                                            <i class="bx bx-receipt"></i> Kembalikan
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
            <% } else { %>
                <p class="text-center">Anda belum meminjam barang apapun.</p>
            <% } %>
                </div>
            </div>
        </div>

<%- include('../partials/client/footer') %>