<%- include('../partials/client/header') %>

    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            <% if (items.length > 0) { %>
            <% items.forEach(item => { %>            
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card text-center h-100">
                        <img src="/img/items/<%= item.gambar %>" class="card-img-top img-fluid" alt="<%= item.nama %>" style="height: 150px; object-fit: cover;" />
                        <div class="card-body py-2 px-3">
                            <h6 class="card-title mb-1"><%= item.id %></h6>
                            <p class="card-text mb-2 text-truncate"><%= item.nama %></p>
                            <a href="/items/list/<%= item.id %>" class="btn btn-sm btn-primary">Detail</a>
                        </div>
                    </div>
                </div>
            <% }) %>
            <% } else { %>
            <p class="text-center">No item available</p>
            <% } %>
        </div>
    </div>

<%- include('../partials/client/footer') %>
